<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" 
        crossorigin="anonymous">
        <style>
            .background-image {
                background-image: url('/img/waffle_selection.png');
                background-repeat: no-repeat;
                background-size: cover;
            }

            #headings {
                color: #fff;
            }
        
            h1, h2 {
                text-align: center;
            }
        </style>
        <title>Snow's Diner</title>
    </head>
    <body class="background-image">
        <div class="container">
            <h1 class="mb-4" id="headings">Snow's Diner</h1>
            <h2 class="mb-4" id="headings">Food Orders</h2>
            <a href="/orders/new" class="btn btn-success">New Order</a>

            <% orders.forEach(order => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= order.firstName %> <%= order.lastName %></h4>
                        <div class="card-text mb-2"><%= order.foodOrder %></div>
                        <a href="orders/<%= order.id %>" class="btn btn-primary">View Specific Order</a>
                        <a href="orders/edit/<%= order.id %>" class="btn btn-warning">Edit Order</a>
                        <form action="/orders/<%= order.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Do you want to delete the order?');">Delete Order</button>
                        </form>
                    </div>
                </div>
            <% }); %>
            <br><footer>
                <% let presentYear = new Date() %>
                <p id="headings">&copy2023-<%= presentYear.getFullYear() %> Phillip Andrews</p>
            </footer>
        </div>
    </body>
</html>